{
  "my_dataset_splits": {
    "_name": "BertDataset",
    "data_file": "$HOME/ag_news/news_with_splits.csv",
    "batch_size": 128,
    "vectorizer": {
      "_name": "BertVectorizer",
      "data_file": "$HOME/ag_news/news_with_splits.csv"
    }
  },
  "model": {
    "_name": "bert_model",
    "pretrained_model_name_or_path": "bert-base-uncased",
    "num_labels": 4
  },
  "optimizer": {
    "_name": "BertAdam",
    "lr": 0.01,
    "params": {
      "_name": "TrainableParameters",
      "model": "$model"
    }
  },
  "scheduler": {
    "_name": "ReduceLROnPlateau",
    "patience": 1,
    "mode": "min",
    "factor": 0.5
  },
  "trainer": {
    "_name": "BasicTrainer",
    "model": "$model",
    "dataset_splits": "$my_dataset_splits",
    "loss": {
      "_name": "CrossEntropyLoss"
    },
    "optimizer": "$optimizer",
    "scheduler": "$scheduler",
    "gradient_clipping": 0.25,
    "num_epochs": 5,
    "seed": 1337,
    "regularizer": {
      "_name": "L1"
    },
    "metrics": {
      "accuracy": {
        "_name": "Accuracy"
      },
      "loss": {
        "_name": "LossMetric",
        "loss_fn": {
          "_name": "CrossEntropyLoss"
        }
      }
    },
    "finetune": true
  }
}