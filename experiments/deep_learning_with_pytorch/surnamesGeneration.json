{
  "my_dataset_splits": {
    "_name": "SurnameDatasetGeneration",
    "data_file": "$HOME/surnames/surnames_with_splits.csv",
    "batch_size": 128,
    "vectorizer": {
      "_name": "SurnameVectorizerGeneration",
      "data_file": "$HOME/surnames/surnames_with_splits.csv"
    }
  },
  "model": {
    "_name": "SurnameConditionedGenerationModel",
    "char_embedding_size": 100,
    "rnn_hidden_size": 100,
    "data": "$my_dataset_splits"
  },
  "optimizer": {
    "_name": "Adam",
    "lr": 0.01,
    "params": {
      "_name": "TrainableParameters"
    }
  },
  "scheduler": {
    "_name": "ReduceLROnPlateau",
    "patience": 1,
    "mode": "min",
    "factor": 0.5
  },
  "output_transform": {
    "_name": "OutputTransformSequence"
  },
  "trainer": {
    "_name": "BasicTrainer",
    "model": "$model",
    "dataset_splits": "$my_dataset_splits",
    "loss": {
      "_name": "SequenceLoss",
      "loss_hyper_params": {
        "_name": "SequenceLossHyperParams",
        "dataset_splits": "$my_dataset_splits"
      }
    },
    "optimizer": "$optimizer",
    "gradient_clipping": 0.25,
    "num_epochs": 5,
    "seed": 1337,
    "output_transform": "$output_transform",
    "regularizer": {
      "_name": "L1"
    },
    "tensorboard_logs": "$HOME/surnames/tensorboard/generation",
    "metrics": {
      "accuracy": {
        "_name": "Accuracy",
        "output_transform": "$output_transform"
      },
      "loss": {
        "_name": "LossMetric",
        "loss_fn": {
          "_name": "SequenceLoss",
          "loss_hyper_params": {
            "_name": "SequenceLossHyperParams",
            "dataset_splits": "$my_dataset_splits"
          }
        }
      }
    }
  }
}